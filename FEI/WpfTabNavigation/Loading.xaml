        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FEI"
        mc:Ignorable="d"
        Title="Actualizando..." Height="180" Width="200" Loaded="Window_Loaded"  Icon="images/fei_cuadro.ico" WindowStartupLocation="CenterScreen" ResizeMode="NoResize" >
    <Grid Margin="0,0,0,2">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="143*"/>
            <ColumnDefinition Width="49*"/>
        </Grid.ColumnDefinitions>
        <Image x:Name="image" Margin="34,10,33,0" Height="106" VerticalAlignment="Top" Stretch="Fill" Grid.ColumnSpan="2"/>
        <Label x:Name="estado" Content="Actualizando" Margin="29,0,29,0" Height="23" VerticalAlignment="Bottom" HorizontalAlignment="Center" HorizontalContentAlignment="Center" Width="134" Grid.ColumnSpan="2"  />

    </Grid>
</Window>
