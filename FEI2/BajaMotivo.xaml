<Window x:Class="FEI.BajaMotivo"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FEI"
        mc:Ignorable="d"
        Title="Motivo de Baja" Height="150" Width="400" ResizeMode="NoResize" Closed="Window_Closed" WindowStartupLocation="CenterScreen" Icon="images/fei_cuadro.ico">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Label Grid.Column="0" Margin="10,15,0,1" Grid.Row="0" x:Name="label" Content="Motivo:" />
        <Button Grid.Column="3" Grid.ColumnSpan="2" Grid.Row="1" x:Name="btnGuardar" Content="Guardar"  Click="btnGuardar_Click"/>
        <TextBox Grid.Column="1" Grid.ColumnSpan="4" Grid.Row="0" x:Name="txtMotivo" Margin="20,15,0,15" TextWrapping="Wrap" Text="" AcceptsReturn="True" Height="50" />

    </Grid>
</Window>
