<Page x:Class="FEI.ayuda.MotivoRechazo"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:FEI.ayuda"
      mc:Ignorable="d" 
     MinHeight="300" MinWidth="300"
      Title="MotivoRechazo" Background="White">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Label Grid.Column="0" Grid.Row="0" HorizontalAlignment="Center" >
            <TextBlock  TextWrapping="Wrap" TextBlock.TextAlignment="Center" TextBlock.FontWeight="Bold" TextBlock.FontSize="14" >
                   MOTIVOS DE RECHAZO DE COMPROBANTES ELECTRÓNICOS
            </TextBlock>
      
        </Label>
        <Label Grid.Column="0" Grid.Row="1">
            <TextBlock TextWrapping="Wrap" TextAlignment="Justify" TextBlock.FontSize="11" TextBlock.FontFamily="Calibri">
                        Se adjunta el PDF SUNAT que contiene el listado de errores SUNAT que comunmente se pueden presentar en la generación y envío de comprobantes electrónicos.
            </TextBlock>
        </Label>
    </Grid>
</Page>
